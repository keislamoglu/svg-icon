{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "rootDir": "src",
    "target": "es5",
    "charset": "utf-8",
    "lib": ["dom", "es2015", "es5", "es6", "esnext"],
    "outDir": "./dist",
    "strict": true,
    "declaration": true,
    "declarationDir": "./dist/types"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "src/example"]
}
